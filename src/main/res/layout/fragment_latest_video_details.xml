<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_parent_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transperant_black"
    android:clickable="false"
    android:orientation="vertical"
    android:tag="linear_parent_detail">

    <!--<android.support.v7.widget.CardView-->
    <!--android:id="@+id/cvModalBackGround"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:layout_alignParentStart="true"-->
    <!--android:layout_alignParentTop="true">-->

    <LinearLayout
        android:id="@+id/llModalBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_black"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rlHeaderTitle"
            style="@style/marginLeftRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgClose"
                android:layout_width="@dimen/common_25_dp"
                android:layout_height="@dimen/common_25_dp"
                android:layout_gravity="end"
                android:background="@drawable/ic_close"
                android:clickable="true"
                android:padding="@dimen/common_5_dp"
                android:tag="close" />

            <TextView
                android:id="@+id/txtVideoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/imgClose"
                android:layout_toStartOf="@id/imgClose"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_16_sp" />


        </LinearLayout>

        <com.tvpage.lib.view.TvPagePlayer
            android:id="@+id/tvPagePlayer"
            style="@style/marginLeftRight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/videoview_height"
            android:layout_marginTop="@dimen/common_10_dp" />

        <RelativeLayout
            android:id="@+id/rlProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:minHeight="120dp">

            <ProgressBar
                android:id="@+id/pbLoaderProducts"
                android:layout_width="@dimen/activity_horizontal_margin"
                android:layout_height="@dimen/activity_horizontal_margin"
                android:layout_centerInParent="true" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin" />
        </RelativeLayout>


    </LinearLayout>

    <View
        android:id="@+id/viewShadow"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/modal_shadow"
        android:minHeight="@dimen/common_10_dp" />
    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>